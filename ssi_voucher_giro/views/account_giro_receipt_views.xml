<odoo>
    <record id="account_giro_receipt_view_tree" model="ir.ui.view">
        <field name="name">account.giro.receipt.tree</field>
        <field name="model">account.giro_receipt</field>
        <field
            name="inherit_id"
            ref="ssi_voucher_giro.account_giro_voucher_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='display_name']" position="attributes">
                    <attribute name="string"># Giro</attribute>
                </xpath>
            </data>

        </field>
    </record>

    <record id="account_giro_receipt_view_form" model="ir.ui.view">
        <field name="name">account.giro.receipt.form</field>
        <field name="model">account.giro_receipt</field>
        <field
            name="inherit_id"
            ref="ssi_voucher_giro.account_giro_voucher_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//label[@for='display_name']" position="attributes">
                    <attribute name="string"># Giro</attribute>
                </xpath>
                <xpath expr="//field[@name='line_ids']" position="before">
                    <button
                        name="%(ssi_voucher_mixin.wizard_import_move_line_action)d"
                        type="action"
                        string="Import Move Lines"
                        states="draft"
                        context="{'import_type':'dr'}"
                    />
                </xpath>
                <xpath expr="//field[@name='line_ids']" position="attributes">
                    <attribute name="name">line_cr_ids</attribute>
                    <attribute
                        name="context"
                    >{'default_type': 'cr', 'default_partner_id':partner_id, 'default_currency_id':currency_id, 'default_company_currency_id':company_currency_id}</attribute>
                </xpath>
            </data>
        </field>
    </record>

    <record id="account_giro_receipt_action" model="ir.actions.act_window">
        <field name="name">Giro Receipt</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.giro_receipt</field>
        <field name="view_mode">tree,form</field>
        <field
            name="search_view_id"
            ref="ssi_voucher_mixin.mixin_account_voucher_view_search"
        />
        <field
            name="context"
        >{'default_filter_grp_draft':1,'default_filter_grp_confirm':1,'default_filter_grp_approve':1,'default_filter_grp_proforma':1}</field>
    </record>

    <menuitem
        id="account_giro_receipt_menu"
        name="Giro Receipt"
        parent="ssi_voucher_bank_cash.account_bank_cash_menu"
        groups="account.group_account_user"
        action="account_giro_receipt_action"
        sequence="20"
    />
</odoo>
