<odoo>
<data noupdate="1">
<record id="policy_template_bank_payment" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="ssi_voucher_bank_cash.model_account_bank_payment" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','account.bank_payment'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<record id="policy_template_bank_payment_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template_bank_payment" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.bank_payment'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','account.bank_payment'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_voucher_bank_cash.bank_payment_user_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>

<record
            id="policy_template_bank_payment_restart_approval"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_bank_payment" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.bank_payment'),('name','=','restart_approval_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','account.bank_payment'),('value','=','confirm')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_voucher_bank_cash.bank_payment_validator_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>

