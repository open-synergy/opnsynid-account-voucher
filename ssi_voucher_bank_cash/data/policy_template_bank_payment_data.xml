    <field
                name="field_id"
                search="[('model_id.model','=','account.bank_payment'),('name','=','done_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','account.bank_payment'),('value','=','open')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
