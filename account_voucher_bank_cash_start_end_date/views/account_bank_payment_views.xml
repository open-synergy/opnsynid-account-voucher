<openerp>
    <data>
        <record id="account_bank_payment_view_form" model="ir.ui.view">
            <field name="name">account.bank_payment form</field>
            <field name="model">account.bank_payment</field>
            <field
                name="inherit_id"
                ref="account_voucher_bank_cash.account_bank_payment_view_form"
            />
            <field name="priority" eval="50" />
            <field name="arch" type="xml">
                <data>
                    <xpath
                        expr="//field[@name='line_dr_ids']/form//field[@name='account_id']"
                        position="after"
                    >
                        <field name="date_start" />
                        <field name="date_end" />
                    </xpath>
                    <xpath
                        expr="//field[@name='line_dr_ids']/tree/field[@name='account_id']"
                        position="after"
                    >
                        <field name="date_start" />
                        <field name="date_end" />
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
