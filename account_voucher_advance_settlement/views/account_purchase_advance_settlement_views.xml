<openerp>
<data>

<record id="account_purchase_advance_settlement_view_tree" model="ir.ui.view">
    <field name="name">account.purchase_advance_settlement tree</field>
    <field name="model">account.purchase_advance_settlement</field>
    <field name="inherit_id" ref="account_voucher_settlement_common.account_voucher_common_settlement_view_tree"/>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string"># Purchase Advance Settlement</attribute>
            </xpath>
        </data>

    </field>
</record>

<record id="account_purchase_advance_settlement_view_form" model="ir.ui.view">
    <field name="name">account.purchase_advance_settlement form</field>
    <field name="model">account.purchase_advance_settlement</field>
    <field name="inherit_id" ref="account_voucher_settlement_common.account_voucher_common_settlement_view_form"/>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//label[@for='name']" position="attributes">
                <attribute name="string"># Purchase Advance Settlement</attribute>
            </xpath>
        </data>
    </field>
</record>

<record id="account_purchase_advance_settlement_action" model="ir.actions.act_window">
    <field name="name">Purchase Advance Settlement</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">account.purchase_advance_settlement</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="account_voucher_common.account_voucher_common_view_search"/>
    <field name="context">{'default_filter_grp_draft':1,'default_filter_grp_confirm':1,'default_filter_grp_approve':1,'default_filter_grp_proforma':1}</field>
</record>

<menuitem
    id="account_purchase_advance_settlement_menu"
    name="Purchase Advance Settlement"
    parent="account_voucher_settlement_common.account_settlement_voucher_menu"
    groups="account.group_account_user"
    action="account_purchase_advance_settlement_action"
    sequence="1"
    />


</data>
</openerp>
