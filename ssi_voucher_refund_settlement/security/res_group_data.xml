<odoo>
<!-- Configurator -->
<record id="sale_refund_settlement_configurator_group" model="res.groups">
    <field name="name">Sale Refund Settlement</field>
    <field
            name="category_id"
            ref="ssi_financial_accounting.financial_accounting_configurator_module_category"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
<record id="purchase_refund_settlement_configurator_group" model="res.groups">
    <field name="name">Purchase Refund Settlement</field>
    <field
            name="category_id"
            ref="ssi_financial_accounting.financial_accounting_configurator_module_category"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

<!-- Workflow -->
<!-- Sale Refund Settlement -->
<record id="sale_refund_settlement_viewer_group" model="res.groups">
    <field name="name">Viewer</field>
    <field
            name="category_id"
            ref="ssi_voucher_refund_settlement.sale_refund_settlement_module_category"
        />
</record>
<record id="sale_refund_settlement_user_group" model="res.groups">
    <field name="name">User</field>
    <field
            name="category_id"
            ref="ssi_voucher_refund_settlement.sale_refund_settlement_module_category"
        />
    <field
            name="implied_ids"
            eval="[(4, ref('sale_refund_settlement_viewer_group'))]"
        />
</record>
<record id="sale_refund_settlement_validator_group" model="res.groups">
    <field name="name">Validator</field>
    <field
            name="category_id"
            ref="ssi_voucher_refund_settlement.sale_refund_settlement_module_category"
        />
    <field name="implied_ids" eval="[(4, ref('sale_refund_settlement_user_group'))]" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

