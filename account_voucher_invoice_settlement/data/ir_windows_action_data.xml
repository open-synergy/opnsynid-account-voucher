<openerp>
<data>

  <record id="account_voucher_invoice_settlement_action" model="ir.actions.act_window">
      <field name="name">Invoice Settlement Configuration</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.voucher_type</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">inline</field>
      <field
                name="res_id"
                ref="account_voucher_invoice_settlement.voucher_type_invoice_settlement"
            />
  </record>

  <menuitem
            id="account_voucher_invoice_settlement_menu"
            name="Configuration"
            parent="account_voucher_invoice_settlement.menu_configuration_invoice_settlement"
            action="account_voucher_invoice_settlement_action"
            sequence="1"
        />

  <record
            id="account_voucher_invoice_settlement_journal_action"
            model="ir.actions.act_window"
        >
      <field name="name">Invoice Settlement Allowed Journal</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.voucher_type_allowed_journal</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field
                name="domain"
                eval="[('voucher_type_id','=',ref('account_voucher_invoice_settlement.voucher_type_invoice_settlement'))]"
            />
      <field
                name="context"
                eval="{'default_voucher_type_id': ref('account_voucher_invoice_settlement.voucher_type_invoice_settlement')}"
            />
  </record>

  <menuitem
            id="account_voucher_invoice_settlement_journal_menu"
            name="Allowed Journals"
            parent="account_voucher_invoice_settlement.menu_configuration_invoice_settlement"
            action="account_voucher_invoice_settlement.account_voucher_invoice_settlement_journal_action"
            sequence="2"
        />

</data>
</openerp>
