<odoo>
<data noupdate="1">
<record id="policy_template_sale_settlement" model="policy.template">
    <field name="name">Standard</field>
    <field
                name="model_id"
                ref="ssi_voucher_advance_settlement.model_account_sale_advance_settlement"
            />
    <field
                name="state_field_id"
                search="[('model_id.model','=','account.sale_advance_settlement'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<record id="policy_template_sale_settlement_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template_sale_settlement" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.sale_advance_settlement'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','account.sale_advance_settlement'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_voucher_advance_settlement.sale_advance_settlement_user_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>

