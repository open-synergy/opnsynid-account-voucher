<odoo>
<data noupdate="1">
<record id="approval_template_sale_settlement" model="approval.template">
    <field name="name">Standard</field>
    <field
                name="model_id"
                ref="ssi_voucher_advance_settlement.model_account_sale_advance_settlement"
            />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">result = True</field>
    <field name="validate_sequence" eval="1" />
</record>
<record id="approval_template_detail_sale_settlement" model="approval.template_detail">
    <field name="template_id" ref="approval_template_sale_settlement" />
    <field name="approver_selection_method">use_group</field>
    <field
                name="approver_group_ids"
                eval="[(6,0,[ref('ssi_voucher_advance_settlement.sale_advance_settlement_validator_group')])]"
            />
</record>
</data>
</odoo>
